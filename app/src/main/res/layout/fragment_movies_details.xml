<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackImage"
            android:layout_width="0dp"
            android:layout_height="298dp"
            android:contentDescription="@string/movie_name"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_details_back_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:foreground="@drawable/movie_details_gradient"/>

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:alpha="0.5"
            android:background="@color/background_transparent"
            android:gravity="start|center_vertical"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="@string/back"
            android:textAppearance="@style/WhiteText.Style12sp.Bold"
            app:drawableStartCompat="@drawable/ic_back"
            app:drawableTint="@color/white_236"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/margin_start_end_16dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="@dimen/margin_start_end_16dp" />

        <TextView
            android:id="@+id/tvAgeLimit"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginTop="222dp"
            android:background="@drawable/age_limit_background"
            android:gravity="center"
            android:text="@string/age_limit_13plus"
            android:textAppearance="@style/tv_age_limit"
            app:layout_constraintBottom_toBottomOf="@+id/ivBackImage"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start|bottom"
            android:lineSpacingMultiplier="0.9"
            android:text="@string/movie_name"
            android:textColor="@color/white_236"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/tvAgeLimit" />

        <TextView
            android:id="@+id/tvGenre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/movie_genre"
            android:textColor="@color/scarlet"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/StarsRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="2.5"
            app:layout_constraintBottom_toBottomOf="@+id/tvReviews"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toTopOf="@+id/tvReviews" />

        <TextView
            android:id="@+id/tvReviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end_16dp"
            android:text="@string/movie_reviews"
            android:textAllCaps="true"
            android:textColor="@color/blue_gray"
            app:layout_constraintStart_toEndOf="@+id/ratingBar"
            app:layout_constraintTop_toBottomOf="@+id/tvGenre" />

        <TextView
            android:id="@+id/tvMinutes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/movie_details_storyline"
            android:textAppearance="@style/WhiteText.Style14sp.Bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/tvReviews" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.75"
            android:lineSpacingExtra="4sp"
            android:paddingTop="12sp"
            android:text="@string/movie_details_description"
            android:textAppearance="@style/WhiteText.Style14sp"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/tvMinutes" />

        <TextView
            android:id="@+id/tvCast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/movie_details_cast"
            android:textAppearance="@style/WhiteText.Style14sp.Bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCast1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_cast_8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_details_downey"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_details_downey"
            app:layout_constraintBottom_toTopOf="@+id/barrier"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/ivCast2"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/tvCast"
            app:shapeAppearanceOverlay="@style/iv_cast_corners" />

        <TextView
            android:id="@+id/tvCast1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_cast_8dp"
            android:text="@string/movie_details_downey"
            android:textAppearance="@style/WhiteText.Style12sp.Bold"
            app:layout_constraintEnd_toStartOf="@+id/tvCast2"
            app:layout_constraintStart_toEndOf="@+id/guidelineLeft"
            app:layout_constraintTop_toBottomOf="@+id/ivCast1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCast2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_cast_8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_details_evans"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_details_evans"
            app:layout_constraintBottom_toTopOf="@+id/barrier"
            app:layout_constraintEnd_toStartOf="@+id/ivCast3"
            app:layout_constraintStart_toEndOf="@+id/ivCast1"
            app:layout_constraintTop_toTopOf="@+id/ivCast1"
            app:shapeAppearanceOverlay="@style/iv_cast_corners" />

        <TextView
            android:id="@+id/tvCast2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_cast_8dp"
            android:text="@string/movie_details_evans"
            android:textAppearance="@style/WhiteText.Style12sp.Bold"
            app:layout_constraintEnd_toStartOf="@+id/tvCast3"
            app:layout_constraintStart_toEndOf="@+id/tvCast1"
            app:layout_constraintTop_toBottomOf="@+id/ivCast2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCast3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin_cast_8dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_details_ruffalo"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_details_ruffalo"
            app:layout_constraintBottom_toTopOf="@+id/barrier"
            app:layout_constraintEnd_toStartOf="@+id/ivCast4"
            app:layout_constraintStart_toEndOf="@+id/ivCast2"
            app:layout_constraintTop_toTopOf="@+id/ivCast1"
            app:shapeAppearanceOverlay="@style/iv_cast_corners" />

        <TextView
            android:id="@+id/tvCast3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/margin_cast_8dp"
            android:text="@string/movie_details_ruffalo"
            android:textAppearance="@style/WhiteText.Style12sp.Bold"
            app:layout_constraintEnd_toStartOf="@+id/tvCast4"
            app:layout_constraintStart_toEndOf="@+id/tvCast2"
            app:layout_constraintTop_toBottomOf="@+id/ivCast3" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivCast4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/movie_details_hemsworth"
            android:scaleType="centerCrop"
            android:src="@drawable/movie_details_hemsworth"
            app:layout_constraintBottom_toTopOf="@+id/barrier"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/ivCast3"
            app:layout_constraintTop_toTopOf="@+id/ivCast1"
            app:shapeAppearanceOverlay="@style/iv_cast_corners" />

        <TextView
            android:id="@+id/tvCast4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/movie_details_hemsworth"
            android:textAppearance="@style/WhiteText.Style12sp.Bold"
            app:layout_constraintEnd_toStartOf="@+id/guidelineRight"
            app:layout_constraintStart_toEndOf="@+id/tvCast3"
            app:layout_constraintTop_toBottomOf="@+id/ivCast4" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="ivCast1, ivCast2, ivCast3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>