<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeworkAA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/background_transparent</item>
        <item name="colorOnPrimary">@color/white_236</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/black_blue</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="WhiteText" parent="Theme.HomeworkAA">
        <item name="android:textColor">@color/white_236</item>
    </style>

    <style name="WhiteText.Style12sp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WhiteText.Style12sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StarsRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/pink</item>
        <item name="android:secondaryProgressTint">@color/pink</item>
        <item name="android:progressBackgroundTint">@color/blue_gray</item>
    </style>

    <style name="WhiteText.Style14sp">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WhiteText.Style14sp.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="iv_cast_corners">
        <item name="cornerSize">5%</item>
    </style>

    <style name="iv_back_image_corners">
        <item name="cornerSize">@dimen/corners_movie_item</item>
    </style>

    <style name="tv_age_limit">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>